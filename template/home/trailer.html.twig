{% extends 'main.html.twig' %}

{% block title %}{{ item.title }}{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ item.title }} iTunes Movie trailers</h1>
        <div class="desc d-flex">
            {% if item.image != null %}
                <img src="{{ item.image }}"/>
            {% endif %}
            <main class="ml-5">
                <p><strong>Описание:</strong> {{ item.description }}</p>
                <a href="{{ item.link }}" target="_blank">Перейти к источнику</a>
            </main>
        </div>
    </div>
    <div class="container mt-2">
        <a href="/"">Вернуться</a>
    </div>
{% endblock %}
